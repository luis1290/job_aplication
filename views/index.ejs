<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" type="text/css" href="public/validarUser.css">
    <link rel="shortcut icon" href="/spaguetti.png" type="image/x-icon">
</head>

<body>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #ffffff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            position: absolute;
            top: 100px;
            font-family: Arial, Helvetica, sans-serif;
            text-transform: uppercase;
        }

        .btn {
            width: 200px;
            border-radius: 10px;
            padding: 10px;
            border: none;
            background-color: #3a10e2;
            color: aliceblue;
            font-weight: bold;
            cursor: pointer;
            transition: 1s all ease;
        }

        .btn:hover {
            background-color: #0f9795;
        }

        img {
            width: 129px;
            position: relative;
            top: 50px;
        }
    </style>
    <h1>¡Solo un paso más!</h1>
    <button class="btn" id="btn">Activar Cuenta</button>
    <script>
        const btn = document.getElementById("btn");

        function getParameterValue(parameter) {
            const url = new URL(window.location.href);
            return url.searchParams.get(parameter);
        }



        const token = getParameterValue('token');

        const verifyEmail = () => {
            axios.post(`http://localhost:8000/validateuser/${token}`)
                .then(() => alert("Registrado"))
                .catch(e => console.log(e))
        }
        btn.addEventListener("click", verifyEmail);
    </script>
</body>

</html>